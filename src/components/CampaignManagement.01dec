  offer: {
    discount: string;
    bonus: string;
    code: string;
    validUntil: string;
  };
  preview: {
    style: string;
    icon: string;
    color: string;
  };
  isDatabaseTemplate?: boolean;
}

type CampaignTemplateId = 'welcome-offer' | 'flash-sale' | 'gift-offer';

