  id: string;
  name: string;
  description: string;
  icon: string;
  visitorMessage: {
    title: string;
    body: string;
    emoji: string;
    theme: {
      primaryColor: string;
      secondaryColor: string;
      backgroundGradient: string;
      borderStyle: string;
      iconStyle: string;
    };
    actionButton: {
      text: string;
      color: string;
    };
