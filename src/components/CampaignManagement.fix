      }
    } catch (error) {
      console.error('Error loading available malls:', error);
      
      // Emergency fallback - at least ensure dropdown isn't empty
      const emergencyFallback = [
        {
          id: 7,
          name: 'NHC Mall',
          latitude: -1.300000,
          longitude: 36.800000,
          address: 'NHC, Nairobi, Kenya',
          radius_meters: 1000,
          active: true,
