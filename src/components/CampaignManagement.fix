    description: '',
    benefits: '',
    shop_name: '',
    shop_id: '9', // FIX: Set default shop_id to prevent NaN
    mall_id: 0 // FIXED: Start with 0, will be set from user context
  });

  const [currentMallId, setCurrentMallId] = useState<number>(0); // FIXED: Don't default to 7
  const [currentShopId, setCurrentShopId] = useState<number>(9);
  const [isInitialized, setIsInitialized] = useState(false);
  const [availableMalls, setAvailableMalls] = useState<any[]>([]);

  // Get available shops for current mall - FIXED: Filtered by user permissions
  const getAvailableShopsForMall = (mallId: number): Shop[] => {
