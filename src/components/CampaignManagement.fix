        },
        {
          id: 6,
          name: 'Langata Mall',
          latitude: -1.330000,
          longitude: 36.710000,
          address: 'Langata, Nairobi, Kenya',
          radius_meters: 1000,
          active: true,
          created_at: '2024-01-01T00:00:00Z',
          updated_at: '2024-01-01T00:00:00Z'
        },
        {
          id: 7,
          name: 'NHC Mall',
          latitude: -1.300000,
          longitude: 36.800000,
          address: 'NHC, Nairobi, Kenya',
          radius_meters: 1000,
          active: true,
          created_at: '2024-01-01T00:00:00Z',
          updated_at: '2024-01-01T00:00:00Z'
        }
      ];
      
      // Filter malls based on user permissions
      // Super admin gets all malls, others get only their assigned malls
      let filteredMalls: any[];
      if (userRole === 'super_admin') {
        // Super admin can access all malls
        filteredMalls = staticMalls;
        console.log('üõ°Ô∏è Super admin - showing all malls');
      } else if (mallAccess.length > 0) {
        // Filter malls based on user's mall access permissions
        filteredMalls = staticMalls.filter(mall => mallAccess.includes(mall.id));
        console.log('üõ°Ô∏è User with specific mall access - filtered malls:', filteredMalls.length);
      } else {
        // No mall access - show empty list for security
        filteredMalls = [];
        console.log('üö´ No mall access - showing empty list');
      }
      
      console.log('‚úÖ CampaignManagement - Filtered malls loaded:', filteredMalls);
      setAvailableMalls(filteredMalls);
      
      // **FIXED: Set user's primary mall from their mall_access list**
      if (mallAccess.length > 0) {
        // Use the first mall from user's mall_access as their primary mall
        const userPrimaryMall = mallAccess[0];
        setCurrentMallId(userPrimaryMall);
        console.log(`‚úÖ CampaignManagement - Set user primary mall: ${userPrimaryMall}`);
      } else if (filteredMalls.length > 0) {
        setCurrentMallId(filteredMalls[0].id);
