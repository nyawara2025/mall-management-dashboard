      const currentUserData = JSON.parse(userDataStr);
      console.log('‚úÖ Current authenticated user:', currentUserData);

      // Handle different user roles with enhanced debugging
      const userRole = currentUserData.role;
      const mallAccess = currentUserData.mall_access || [];
      const shopAccess = currentUserData.shop_access || [];
      
      console.log('üîç User authentication data:', {
        username: currentUserData.username,
        role: userRole,
        mall_access: mallAccess,
        shop_access: shopAccess,
        full_name: currentUserData.full_name
