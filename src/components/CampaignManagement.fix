      if (userRole === 'super_admin') {
        // Super admin can access all malls, default to first mall
        return { mall_id: mallAccess[0] || 3, shop_id: shopAccess[0] || 3 };
      } else if (userRole === 'mall_admin') {
        // Mall admin can access their assigned mall, default to first assigned mall
        return { mall_id: mallAccess[0] || 3, shop_id: shopAccess[0] || 3 };
      } else if (userRole === 'shop_admin') {
        // Shop admin - can only access their assigned shop and mall
        return { 
          mall_id: mallAccess[0] || 3, 
          shop_id: shopAccess[0] || 3 
        };
      } else {
        console.warn('Unknown user role:', userRole);
        return { mall_id: 3, shop_id: 3 };
      }
    } catch (error) {
      console.error('Error getting user mall and shop:', error);
      return { mall_id: 6, shop_id: 6 }; // Fallback
    }
  };

  // Get current mall ID with proper authentication
  const getCurrentMallId = async (): Promise<number> => {
    const userMallAndShop = await getCurrentUserMallAndShop();
    
    // Try to get from URL params first
    const urlParams = new URLSearchParams(window.location.search);
    const urlMallId = urlParams.get('mall_id');
    if (urlMallId && !isNaN(parseInt(urlMallId))) {
      return parseInt(urlMallId);
    }
    
    // Try to get from localStorage
    const storedMallId = localStorage.getItem('current_mall_id');
    if (storedMallId && !isNaN(parseInt(storedMallId))) {
      return parseInt(storedMallId);
    }
    
    // Use user's actual mall from authentication
    return userMallAndShop.mall_id;
  };

  // Get current shop ID
  const getCurrentShopId = async (): Promise<number> => {
    const userMallAndShop = await getCurrentUserMallAndShop();
    const storedShopId = localStorage.getItem('current_shop_id');
    if (storedShopId && !isNaN(parseInt(storedShopId))) {
      return parseInt(storedShopId);
    }
    
    // Use user's actual shop from authentication
    return userMallAndShop.shop_id;
  };

  // Transform n8n campaign data to match our interface
  const transformCampaignData = (rawCampaign: any): Campaign => {
    // Extract mall ID from location field (e.g., "mall_7" -> 7)
    let mallId: number;
    if (rawCampaign.location && typeof rawCampaign.location === 'string') {
      const mallMatch = rawCampaign.location.match(/mall_(\d+)/);
      mallId = mallMatch ? parseInt(mallMatch[1]) : parseInt(rawCampaign.mall_id || 7);
    } else {
      mallId = parseInt(rawCampaign.mall_id || 7);
    }

    // Extract shop ID from various possible fields
    let shopId: number;
    if (rawCampaign.shop_id) {
      shopId = parseInt(rawCampaign.shop_id);
    } else if (rawCampaign.shopId) {
      shopId = parseInt(rawCampaign.shopId);
    } else if (rawCampaign.shop_id_int) {
      shopId = parseInt(rawCampaign.shop_id_int);
    } else {
      shopId = 55; // Default to TeNEAR Tech for Neo
    }

    // Get shop name from our SHOPS mapping or use provided name
    const shopName = SHOPS[shopId]?.name || rawCampaign.shop_name || `Shop ${shopId}`;

    return {
      id: parseInt(rawCampaign.id) || 0,
      name: rawCampaign.title || rawCampaign.name || 'Unnamed Campaign',
      description: rawCampaign.description || 'No description available',
      benefits: rawCampaign.benefits || 'No benefits specified',
      shop_name: shopName,
      shop_id: shopId.toString(),
      mall_id: mallId,
      qr_code_url_entrance: rawCampaign.qr_code_url_entrance || null,
      qr_code_url_checkout: rawCampaign.qr_code_url_checkout || null,
      qr_code_url_display: rawCampaign.qr_code_url_display || null,
      scan_count: parseInt(rawCampaign.scan_count) || 0,
      created_at: rawCampaign.created_at || new Date().toISOString(),
      updated_at: rawCampaign.updated_at || new Date().toISOString()
    };
  };

  // Form state
  const [formData, setFormData] = useState({
