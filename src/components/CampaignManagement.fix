      filteredShops = [];
      console.log('üö´ No shop access - showing empty list');
    }
    
    console.log('‚úÖ Filtered shops for mall', mallId, ':', filteredShops);
    return filteredShops;
  };

  // Helper function to find mall information by ID
  const getMallInfo = (mallId: number) => {
    return availableMalls.find(mall => mall.id === mallId) || { name: `Mall ${mallId}`, id: mallId };
  };

  // Load available malls - FIXED: Filtered by user permissions
  const loadAvailableMalls = async () => {
    try {
      console.log('üè¢ CampaignManagement - Loading malls with permission filtering');
      
      // Get user permissions for mall access
      const userStr = localStorage.getItem('geofence_user_data');
      const currentUserData = userStr ? JSON.parse(userStr) : null;
      const mallAccess = currentUserData?.mall_access || [];
      const userRole = currentUserData?.role;
      
      console.log('üîç User mall access permissions:', mallAccess);
      
      // Use static mall data as primary source to ensure dropdown is always populated
      const staticMalls = [
        {
          id: 3,
          name: 'China Square Mall',
          latitude: -1.286389,
          longitude: 36.817223,
          address: 'Nairobi, Kenya',
          radius_meters: 1000,
          active: true,
