  const [formMode, setFormMode] = useState<'create' | 'edit'>('create');
  const [malls, setMalls] = useState<any[]>([]);
  // Initialize selectedMallId with authenticated mall ID from token
  const [selectedMallId, setSelectedMallId] = useState<number | null>(null);
  
  // Authentication state - Initialize with null, will be populated from token
  const [currentMallId, setCurrentMallId] = useState<number | null>(null);
  const [currentShopId, setCurrentShopId] = useState<number | null>(null);

  // QR Generation state
  const [showQRGeneration, setShowQRGeneration] = useState(false);
  const [selectedCampaignForQR, setSelectedCampaignForQR] = useState<any>(null);

  // WhatsApp integration state
  const [showNotification, setShowNotification] = useState<{ type: 'success' | 'error'; message: string } | null>(null);
  const [activeTab, setActiveTab] = useState('campaigns');

  // Token parsing function - Extracts user data from authentication token
  const parseAuthToken = (token: string): { mall_id: number; shop_id: number; user_id: string; username: string; role: string } | null => {
    console.log('üîç PARSING TOKEN:', token);
    
    const parts = token.split('-');
    if (parts.length !== 6) {
      console.error('‚ùå Invalid token format. Expected 6 parts, got:', parts.length);
      return null;
    }
    
    const [user_id, username, role, mall_id, shop_id, timestamp] = parts;
    const parsedData = {
      user_id,
      username,
      role,
      mall_id: parseInt(mall_id),
      shop_id: parseInt(shop_id)
    };
    
    console.log('‚úÖ TOKEN PARSED:', parsedData);
    return parsedData;
  };

  // Get user's mall and shop from token-based authentication
  const getCurrentUserMallAndShop = async () => {
    try {
      console.log('üîê TOKEN-BASED AUTHENTICATION - Getting user mall and shop');
      
      const authToken = localStorage.getItem('geofence_auth_token');
      
      if (!authToken) {
        console.error('‚ùå No authenticated token found - user must be logged in');
        return { mall_id: null, shop_id: null };
      }

      const parsedToken = parseAuthToken(authToken);
      
      if (!parsedToken) {
        console.error('‚ùå Failed to parse token - authentication invalid');
        return { mall_id: null, shop_id: null };
      }

      console.log('üéØ AUTHENTICATED USER DATA:', {
        user_id: parsedToken.user_id,
        username: parsedToken.username,
        role: parsedToken.role,
        mall_id: parsedToken.mall_id,
        shop_id: parsedToken.shop_id
      });

      return {
        mall_id: parsedToken.mall_id,
        shop_id: parsedToken.shop_id
      };
      
    } catch (error) {
      console.error('‚ùå Error getting user mall and shop from token:', error);
      return { mall_id: null, shop_id: null };
    }
  };

  // Get current shop ID from token
  const getCurrentShopId = async (): Promise<number | null> => {
    try {
      console.log('üîç Getting current shop ID from token');
      
      const authToken = localStorage.getItem('geofence_auth_token');
      
      if (!authToken) {
        console.error('‚ùå No auth token - user must be logged in');
        return null;
      }

      const parsedToken = parseAuthToken(authToken);
      
      if (!parsedToken || !parsedToken.shop_id) {
        console.error('‚ùå Failed to parse token or missing shop_id - authentication invalid');
        return null;
      }

      console.log('‚úÖ Current shop ID from token:', parsedToken.shop_id);
      return parsedToken.shop_id;
      
    } catch (error) {
      console.error('‚ùå Error getting current shop ID:', error);
      return 6;
    }
  };

  // Fetch malls for dropdown
  const fetchMalls = async () => {
    try {
      console.log('üè¢ Fetching available malls');
      
      const response = await fetch('https://n8n.tenear.com/webhook/management/malls', {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('geofence_auth_token')}`
        }
      });

      if (!response.ok) {
        throw new Error(`Failed to fetch malls: ${response.statusText}`);
      }

      const mallsData = await response.json();
      console.log('‚úÖ Malls fetched:', mallsData.length);
      console.log('üìä Malls data received:', mallsData);
      
      // Handle both array and object response formats for malls
      let processedMalls;
      if (Array.isArray(mallsData)) {
        processedMalls = mallsData;
      } else if (mallsData && typeof mallsData === 'object' && Array.isArray(mallsData.data)) {
        processedMalls = mallsData.data;
      } else if (mallsData && typeof mallsData === 'object' && Array.isArray(mallsData.malls)) {
        processedMalls = mallsData.malls;
      } else {
        processedMalls = [];
        console.warn('‚ö†Ô∏è Unexpected malls data format:', mallsData);
      }
      
      setMalls(processedMalls);
      
      // Set default mall from token if not already set
      if (processedMalls.length > 0 && !selectedMallId) {
        const tokenData = await getCurrentUserMallAndShop();
        const defaultMall = processedMalls.find((mall: any) => mall.id === tokenData.mall_id);
        if (defaultMall) {
          setSelectedMallId(defaultMall.id);
          setCurrentMallId(defaultMall.id);
        }
      }
      
    } catch (error) {
      console.error('‚ùå Error fetching malls:', error);
      setError('Failed to fetch malls');
    }
  };

  // Helper function to determine campaign status with multiple fallbacks
  const getCampaignStatus = (campaign: any): boolean => {
    // Check various status fields in order of preference
    if (campaign.active !== undefined) return campaign.active;
    if (campaign.status) return campaign.status === 'active' || campaign.status === true;
    if (campaign.isActive !== undefined) return campaign.isActive;
    if (campaign.enabled !== undefined) return campaign.enabled;
    if (campaign.published !== undefined) return campaign.published;
    
    // Default to false if no status found
    return false;
  };

  // Helper function to format created date with multiple fallbacks
  // Track QR code scan via existing visitor-checkins webhook
  const trackQRScan = async (campaignId: string) => {
    try {
      console.log('üì± Tracking QR scan for campaign via visitor-checkins webhook:', campaignId);
      
      // Use the existing visitor-checkins webhook that the user mentioned
