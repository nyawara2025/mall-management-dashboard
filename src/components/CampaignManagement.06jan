      throw new Error('Clipboard API not available or insecure context');
      
    } catch (error) {
      console.error('Failed to copy WhatsApp message:', error);
      
      // Enhanced fallback: Create a text area for manual selection
      const textArea = document.createElement('textarea');
      textArea.value = message;
      textArea.style.position = 'fixed';
      textArea.style.left = '-999999px';
      textArea.style.top = '-999999px';
      document.body.appendChild(textArea);
      textArea.focus();
      textArea.select();
      
      try {
        document.execCommand('copy');
        setShowNotification({
          type: 'success',
          message: `WhatsApp message (${templateType}) copied successfully!`
        });
      } catch (fallbackError) {
        // Final fallback: Show in prompt
        prompt('Copy this WhatsApp message:', message);
