      if (navigator.clipboard && navigator.clipboard.writeText && window.isSecureContext) {
        await navigator.clipboard.writeText(message);
        
        setShowNotification({
          type: 'success',
          message: `WhatsApp message (${templateType}) copied to clipboard!`
