const CampaignManagement: React.FC = () => {
  // State management
  const [campaigns, setCampaigns] = useState<any[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [selectedCampaign, setSelectedCampaign] = useState<any>(null);
  const [showForm, setShowForm] = useState(false);
  const [formMode, setFormMode] = useState<'create' | 'edit'>('create');
  const [malls, setMalls] = useState<any[]>([]);
  // Initialize selectedMallId with authenticated mall ID from token
  const [selectedMallId, setSelectedMallId] = useState<number | null>(null);
  
  // Authentication state - Initialize with token-based defaults
  const [currentMallId, setCurrentMallId] = useState<number>(6); // Token default
  const [currentShopId, setCurrentShopId] = useState<number>(6); // Token default

  // Token parsing function - Extracts user data from authentication token
  const parseAuthToken = (token: string): { mall_id: number; shop_id: number; user_id: string; username: string; role: string } | null => {
    console.log('üîç PARSING TOKEN:', token);
    
    const parts = token.split('-');
    if (parts.length !== 6) {
      console.error('‚ùå Invalid token format. Expected 6 parts, got:', parts.length);
      return null;
    }
    
    const [user_id, username, role, mall_id, shop_id, timestamp] = parts;
    const parsedData = {
      user_id,
      username,
      role,
      mall_id: parseInt(mall_id),
      shop_id: parseInt(shop_id)
    };
    
    console.log('‚úÖ TOKEN PARSED:', parsedData);
    return parsedData;
  };

  // Get user's mall and shop from token-based authentication
  const getCurrentUserMallAndShop = async () => {
    try {
      console.log('üîê TOKEN-BASED AUTHENTICATION - Getting user mall and shop');
      
      const authToken = localStorage.getItem('geofence_auth_token');
      
      if (!authToken) {
        console.log('‚ö†Ô∏è No authenticated token found, using defaults');
        return { mall_id: 6, shop_id: 6 };
      }

      const parsedToken = parseAuthToken(authToken);
      
      if (!parsedToken) {
        console.error('‚ùå Failed to parse token, using defaults');
        return { mall_id: 6, shop_id: 6 };
      }

      console.log('üéØ AUTHENTICATED USER DATA:', {
        user_id: parsedToken.user_id,
        username: parsedToken.username,
        role: parsedToken.role,
        mall_id: parsedToken.mall_id,
        shop_id: parsedToken.shop_id
      });

      return {
        mall_id: parsedToken.mall_id,
        shop_id: parsedToken.shop_id
      };
      
    } catch (error) {
      console.error('‚ùå Error getting user mall and shop from token:', error);
      return { mall_id: 6, shop_id: 6 };
    }
  };

  // Get current shop ID from token
  const getCurrentShopId = async (): Promise<number> => {
    try {
      console.log('üîç Getting current shop ID from token');
      
      const authToken = localStorage.getItem('geofence_auth_token');
      
      if (!authToken) {
        console.log('‚ö†Ô∏è No auth token, using default shop ID: 6');
        return 6;
      }

      const parsedToken = parseAuthToken(authToken);
      
      if (!parsedToken) {
        console.log('‚ö†Ô∏è Failed to parse token, using default shop ID: 6');
        return 6;
      }

      console.log('‚úÖ Current shop ID from token:', parsedToken.shop_id);
      return parsedToken.shop_id;
      
    } catch (error) {
      console.error('‚ùå Error getting current shop ID:', error);
      return 6;
    }
  };

  // Fetch malls for dropdown
  const fetchMalls = async () => {
    try {
      console.log('üè¢ Fetching available malls');
      
      const response = await fetch('https://n8n.tenear.com/webhook/management/malls', {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('geofence_auth_token')}`
        }
      });

      if (!response.ok) {
        throw new Error(`Failed to fetch malls: ${response.statusText}`);
      }

      const mallsData = await response.json();
      console.log('‚úÖ Malls fetched:', mallsData.length);
      console.log('üìä Malls data received:', mallsData);
      
      // Handle both array and object response formats for malls
      let processedMalls;
      if (Array.isArray(mallsData)) {
        processedMalls = mallsData;
      } else if (mallsData && typeof mallsData === 'object' && Array.isArray(mallsData.data)) {
        processedMalls = mallsData.data;
      } else if (mallsData && typeof mallsData === 'object' && Array.isArray(mallsData.malls)) {
        processedMalls = mallsData.malls;
      } else {
        processedMalls = [];
        console.warn('‚ö†Ô∏è Unexpected malls data format:', mallsData);
      }
      
      setMalls(processedMalls);
      
      // Set default mall from token if not already set
      if (processedMalls.length > 0 && !selectedMallId) {
        const tokenData = await getCurrentUserMallAndShop();
        const defaultMall = processedMalls.find((mall: any) => mall.id === tokenData.mall_id);
        if (defaultMall) {
          setSelectedMallId(defaultMall.id);
          setCurrentMallId(defaultMall.id);
        }
      }
      
    } catch (error) {
      console.error('‚ùå Error fetching malls:', error);
      setError('Failed to fetch malls');
    }
  };

  // Fetch campaigns for selected mall
  const fetchCampaignsForMall = async (mallId: number) => {
    try {
      setLoading(true);
      console.log('üìä FETCHING CAMPAIGNS FOR MALL:', mallId);
      
      // Get authenticated shop ID from token
      const authenticatedShopId = await getCurrentShopId();
      console.log('üö® CRITICAL DEBUG - Campaign fetch parameters:', { 
        authenticatedShopId, 
        mallId,
        fromToken: true 
      });

      const response = await fetch(`https://n8n.tenear.com/webhook/manage-campaigns-get?shop_id=${authenticatedShopId}&mall_id=${mallId}`, {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('geofence_auth_token')}`
        }
      });

      if (!response.ok) {
        throw new Error(`Failed to fetch campaigns: ${response.statusText}`);
      }

      const data = await response.json();
      console.log('‚úÖ Campaign fetch successful:', Array.isArray(data) ? data.length : 'non-array response', 'campaigns');
      console.log('üìä Campaign data received:', data);
      
      // DEBUG: Log first campaign structure
      if (Array.isArray(data) && data.length > 0) {
        console.log('üîç First campaign structure sample:', JSON.stringify(data[0], null, 2));
      }
      
      // Handle both array and object response formats
      let campaignData;
      if (Array.isArray(data)) {
        // Direct array response
        campaignData = data;
      } else if (data && typeof data === 'object' && Array.isArray(data.campaigns)) {
        // Object with campaigns property
        campaignData = data.campaigns;
      } else {
        // Unknown format, default to empty array
        campaignData = [];
        console.warn('‚ö†Ô∏è Unexpected campaign data format:', data);
      }
      
      console.log('üéØ Extracted campaign data:', campaignData);
      console.log('üîç First campaign structure sample:', campaignData[0] || 'No campaigns');
      if (campaignData[0]) {
        console.log('üìã Available fields in campaign:', Object.keys(campaignData[0]));
      }
      setCampaigns(campaignData);
      
    } catch (error) {
      console.error('‚ùå Error fetching campaigns:', error);
      setError('Failed to fetch campaigns');
    } finally {
      setLoading(false);
    }
  };

  // Handle mall change
  const handleMallChange = async (newMallId: number) => {
    try {
      console.log('üè¢ HANDLING MALL CHANGE:', newMallId);
      
      // Get authenticated shop ID from token (for current mall)
      const authenticatedShopId = await getCurrentShopId();
      console.log('üîÑ Using authenticated shop_id from token:', authenticatedShopId);
      
      setSelectedMallId(newMallId);
      setCurrentMallId(newMallId);
      
      // Fetch campaigns for the new mall
      await fetchCampaignsForMall(newMallId);
      
    } catch (error) {
      console.error('‚ùå Error handling mall change:', error);
      setError('Failed to switch mall');
    }
  };

  // Handle form submission
  const handleSubmit = async (formData: any) => {
    try {
      console.log('üì§ Submitting campaign form');
      
      // Get authenticated user and shop data from token
      const userData = await getCurrentUserMallAndShop();
      const authenticatedShopId = await getCurrentShopId();
      
      // Get user data from token
      const authToken = localStorage.getItem('geofence_auth_token');
      const parsedToken = authToken ? parseAuthToken(authToken) : null;
      
      // Get shop name from authenticated token or use shop ID as fallback
      const shopName = parsedToken?.username ? parsedToken.username : `Shop ${authenticatedShopId}`;
      
      // Determine action based on form mode
      const isUpdate = formMode === 'edit';
      const action = isUpdate ? 'update' : 'create';

      // Map form fields to N8N workflow expected format
      const campaignData = {
        action: action, // Required by N8N workflow for routing
        name: formData.title || '', // Campaign name
        description: formData.visitor_message || '', // Map visitor_message to description
        benefits: formData.offer_details || '', // Map offer_details to benefits
        discount_code: formData.discount_code || null,
        valid_until: formData.valid_until || null,
        active: formData.active !== undefined ? formData.active : true, // Include active status
        shop_id: authenticatedShopId.toString(),
        mall_id: selectedMallId?.toString(),
        shop_name: shopName, // Use shop name from authenticated data
        user_id: parsedToken?.user_id?.toString() || null,
        username: parsedToken?.username || null,
        qr_codes: null, // QR codes will be integrated later with existing QR wizard system
        ...(isUpdate ? { id: formData.id } : {}), // Include ID for updates
        ...(isUpdate ? {} : { created_at: new Date().toISOString() }) // Only add created_at for new campaigns
      };

      console.log('üéØ FORM DATA WITH AUTHENTICATED SHOP_ID:', {
        ...campaignData,
        authenticatedShopId,
        currentShopId
      });

      const response = await fetch('https://n8n.tenear.com/webhook/manage-campaigns-post', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('geofence_auth_token')}`
        },
        body: JSON.stringify(campaignData)
      });

      if (!response.ok) {
        throw new Error(`Failed to submit campaign: ${response.statusText}`);
      }

      // Handle response more robustly - check if there's content to parse
      let result;
      try {
        const responseText = await response.text();
        console.log('üìÑ Raw response text:', responseText);
        
        if (responseText.trim() === '') {
          // Empty response - assume success
          console.log('‚úÖ Empty response received, assuming success');
          result = { success: true, message: 'Campaign submitted successfully' };
        } else {
          // Try to parse as JSON
          result = JSON.parse(responseText);
          console.log('‚úÖ Campaign submitted successfully:', result);
        }
      } catch (parseError) {
        // JSON parsing failed, assume success if we got a response
        console.log('‚úÖ Non-JSON response received, assuming success:', parseError);
        result = { success: true, message: 'Campaign submitted successfully' };
      }
      
      // Reset form and refresh campaigns
      setShowForm(false);
      setFormMode('create');
      
      // Reset form state
      setSelectedCampaign(null);
      
      // Refresh campaigns list
      if (selectedMallId) {
        await fetchCampaignsForMall(selectedMallId);
      }
      
    } catch (error) {
      console.error('‚ùå Error submitting campaign:', error);
      setError('Failed to submit campaign');
    }
  };

  // Handle campaign deletion
  const handleDelete = async (campaignId: string) => {
    try {
      console.log('üóëÔ∏è Deleting campaign:', campaignId);
      
      if (!confirm('Are you sure you want to delete this campaign?')) {
        return;
      }

      const response = await fetch(`https://n8n.tenear.com/webhook/manage-campaigns-delete`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('geofence_auth_token')}`
        },
        body: JSON.stringify({
          campaign_id: campaignId,
          shop_id: (await getCurrentShopId()).toString(),
          action: 'delete'  // Add action to distinguish from other POST requests
        })
      });

      if (!response.ok) {
        throw new Error(`Failed to delete campaign: ${response.statusText}`);
      }

      console.log('‚úÖ Campaign deleted successfully');
      
      // Refresh campaigns list
      if (selectedMallId) {
        await fetchCampaignsForMall(selectedMallId);
      }
      
    } catch (error) {
      console.error('‚ùå Error deleting campaign:', error);
      setError('Failed to delete campaign');
    }
  };

  // Reset form with authenticated shop_id
  const resetForm = () => {
    console.log('üîÑ Resetting campaign form');
    
    // Get authenticated shop ID from token for form reset
    getCurrentShopId().then(authenticatedShopId => {
      console.log('üéØ FORM RESET - Using authenticated shop_id:', authenticatedShopId, 'instead of currentShopId:', currentShopId);
      
      setSelectedCampaign({
        title: '',
        description: '',
        template_id: 'welcome-offer',
        visitor_message: '',
        offer_details: '',
        discount_code: '',
        valid_until: '',
        shop_id: authenticatedShopId.toString(), // Use authenticated shop_id from token
        mall_id: selectedMallId?.toString(),
        active: true
      });
    });
  };

  // Handle create campaign
  const handleCreateCampaign = () => {
    console.log('‚ûï Creating new campaign');
    setFormMode('create');
    resetForm();
    setShowForm(true);
  };

  // Handle edit campaign
  const handleViewCampaign = (campaign: any) => {
    console.log('üëÅÔ∏è Viewing campaign:', campaign.campaign_id || campaign.id);
    // For now, show alert with campaign details
    // TODO: Implement modal or detailed view later
    alert(`Campaign Details:\n\nName: ${campaign.name}\nDescription: ${campaign.message || campaign.description}\nStatus: ${campaign.active ? 'Active' : 'Inactive'}\nShop ID: ${campaign.shop_id}\nCreated: ${campaign.created_at ? new Date(campaign.created_at).toLocaleDateString() : 'Unknown'}`);
  };

  // Map N8N campaign data to edit form format
  const mapCampaignToEditForm = (campaign: any) => {
    console.log('üîÑ Mapping campaign data for edit form:', campaign);
    const mapped = {
      ...campaign,
      id: campaign.campaign_id || campaign.id,  // Map N8N campaign_id ‚Üí form id
      title: campaign.name,  // Map N8N name ‚Üí form title
      visitor_message: campaign.message || campaign.description || campaign.visitor_message,  // Map N8N message ‚Üí form visitor_message
      offer_details: campaign.benefits || campaign.offer_details,  // Map N8N benefits ‚Üí form offer_details
      // Keep original fields for backward compatibility
      description: campaign.message || campaign.description || campaign.visitor_message || '',  // Map N8N message ‚Üí description field
    };
    console.log('‚úÖ Mapped campaign data:', mapped);
    return mapped;
  };

  const handleEditCampaign = (campaign: any) => {
    console.log('‚úèÔ∏è Editing campaign:', campaign.campaign_id || campaign.id);
    setFormMode('edit');
    const mappedCampaign = mapCampaignToEditForm(campaign);
    console.log('üéØ Setting selectedCampaign with mapped data:', mappedCampaign);
    setSelectedCampaign(mappedCampaign);
    setShowForm(true);
  };

  // Initialize component with token-based authentication
  useEffect(() => {
    const initializeComponent = async () => {
      try {
        console.log('üöÄ Initializing CampaignManagement with token-based authentication');
        
        // Get authenticated user mall and shop from token
        const userMallAndShop = await getCurrentUserMallAndShop();
        const mallId = userMallAndShop.mall_id;
        const shopId = userMallAndShop.shop_id;
        
        console.log('üîê INITIALIZATION - Authenticated from token:', {
          mall_id: mallId,
          shop_id: shopId,
          timestamp: new Date().toISOString()
        });
        
        // Set state with authenticated values
        setCurrentMallId(mallId);
        setCurrentShopId(shopId);
        setSelectedMallId(mallId);
        
        // Fetch malls and campaigns
        await fetchMalls();
        
        console.log('‚úÖ CampaignManagement initialization complete');
        
      } catch (error) {
        console.error('‚ùå Error initializing component:', error);
        setError('Failed to initialize component');
      }
    };

    initializeComponent();
  }, []);

  // Fetch campaigns when mall changes
  useEffect(() => {
    if (selectedMallId) {
      console.log('üîÑ Fetching campaigns for mall:', selectedMallId);
      fetchCampaignsForMall(selectedMallId);
    }
  }, [selectedMallId]);

  // Apply template to form
  const applyTemplate = (templateId: CampaignTemplateId) => {
    const template = CAMPAIGN_TEMPLATES[templateId];
    if (!template) return;

    console.log('üìã Applying template:', templateId);
    
    setSelectedCampaign((prev: any) => ({
      ...prev,
      template_id: templateId,
      visitor_message: template.visitorMessage.body,
      offer_details: `${template.offer.discount} - ${template.offer.bonus}`,
      discount_code: template.offer.code,
      valid_until: template.offer.validUntil
    }));
  };

  return (
    <div className="p-6 max-w-7xl mx-auto">
      <div className="mb-6">
        <h1 className="text-3xl font-bold text-gray-900 mb-2">Campaign Management</h1>
        <p className="text-gray-600">Manage promotional campaigns for your mall and shops</p>
      </div>

      {error && (
        <div className="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
          {error}
        </div>
      )}

      {/* Mall Selection */}
      <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
        <div className="flex items-center space-x-4">
          <label className="text-sm font-medium text-gray-700">Select Mall:</label>
          <select
            value={selectedMallId || ''}
            onChange={(e) => handleMallChange(Number(e.target.value))}
            className="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="">Select a mall</option>
            {malls.map(mall => (
              <option key={mall.id} value={mall.id}>
                {mall.name}
              </option>
            ))}
          </select>
          
          {selectedMallId && (
            <div className="text-sm text-gray-600">
              Current Mall: {malls.find(m => m.id === selectedMallId)?.name || `Mall ID ${selectedMallId}`}
            </div>
          )}
        </div>
      </div>

      {selectedMallId && (
        <>
          {/* Campaign Stats */}
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
              <h3 className="text-lg font-semibold text-gray-900 mb-2">Total Campaigns</h3>
              <p className="text-3xl font-bold text-blue-600">{Array.isArray(campaigns) ? campaigns.length : 0}</p>
            </div>
            <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
              <h3 className="text-lg font-semibold text-gray-900 mb-2">Active Campaigns</h3>
              <p className="text-3xl font-bold text-green-600">
                {Array.isArray(campaigns) ? campaigns.filter(c => c.active).length : 0}
              </p>
            </div>
            <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
              <h3 className="text-lg font-semibold text-gray-900 mb-2">Mall ID</h3>
              <p className="text-3xl font-bold text-purple-600">{selectedMallId}</p>
            </div>
          </div>

          {/* Action Buttons */}
          <div className="flex justify-between items-center mb-6">
            <h2 className="text-xl font-semibold text-gray-900">Campaigns</h2>
            <button
              onClick={handleCreateCampaign}
              className="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md flex items-center space-x-2"
            >
              <span>‚ûï</span>
              <span>Create Campaign</span>
            </button>
          </div>

          {/* Campaigns List */}
          {loading ? (
            <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
              <div className="text-gray-500">Loading campaigns...</div>
            </div>
          ) : (Array.isArray(campaigns) && campaigns.length === 0) ? (
            <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
              <div className="text-gray-500">No campaigns found. Create your first campaign!</div>
            </div>
          ) : (
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {Array.isArray(campaigns) && campaigns.map(campaign => (
                <div key={campaign.campaign_id || campaign.id} className="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
                  <div className="flex justify-between items-start mb-3">
                    <h3 className="font-semibold text-gray-900">{campaign.name}</h3>
                    <span className={`px-2 py-1 text-xs rounded-full ${
                      campaign.active 
                        ? 'bg-green-100 text-green-800' 
                        : 'bg-gray-100 text-gray-800'
                    }`}>
                      {campaign.active ? 'Active' : 'Inactive'}
                    </span>
                  </div>
                  
                  <p className="text-gray-600 text-sm mb-3">{campaign.message || campaign.description || 'No description'}</p>
                  
                  <div className="text-xs text-gray-500 mb-3">
                    <div>Shop: {campaign.shop_name || `Shop ${campaign.shop_id}`}</div>
                    <div>Created: {campaign.created_at ? new Date(campaign.created_at).toLocaleDateString() : 'Unknown'}</div>
                  </div>
                  
                  <div className="flex space-x-2">
                    <button
                      onClick={() => handleViewCampaign(campaign)}
                      className="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-xs flex items-center space-x-1"
                    >
                      <span>üëÅÔ∏è</span>
                      <span>View</span>
                    </button>
                    <button
                      onClick={() => handleEditCampaign(campaign)}
                      className="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-xs flex items-center space-x-1"
                    >
                      <span>‚úèÔ∏è</span>
                      <span>Edit</span>
                    </button>
                    <button
                      onClick={() => handleDelete(campaign.campaign_id || campaign.id)}
                      className="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-xs flex items-center space-x-1"
                    >
                      <span>üóëÔ∏è</span>
                      <span>Delete</span>
                    </button>
                  </div>
                </div>
              ))}
            </div>
          )}
        </>
      )}

      {/* Campaign Form Modal */}
      {showForm && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
          <div className="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
            <div className="p-6">
              <div className="flex justify-between items-center mb-4">
                <h2 className="text-xl font-semibold text-gray-900">
                  {formMode === 'create' ? 'Create Campaign' : 'Edit Campaign'}
                </h2>
                <button
                  onClick={() => setShowForm(false)}
                  className="text-gray-400 hover:text-gray-600"
                >
                  ‚úï
                </button>
              </div>

              {/* Campaign Templates */}
              <div className="mb-6">
                <h3 className="text-sm font-medium text-gray-700 mb-3">Quick Start Templates</h3>
                <div className="grid grid-cols-2 md:grid-cols-3 gap-2">
                  {Object.entries(CAMPAIGN_TEMPLATES).map(([key, template]) => (
                    <button
                      key={key}
                      onClick={() => applyTemplate(key as CampaignTemplateId)}
                      className={`p-3 rounded-lg border text-left hover:bg-gray-50 ${template.preview.style}`}
                    >
                      <div className="text-lg mb-1">{template.icon}</div>
                      <div className="text-xs font-medium">{template.name}</div>
                      <div className="text-xs text-gray-500">{template.description}</div>
                    </button>
                  ))}
                </div>
              </div>

              <form onSubmit={(e) => {
                e.preventDefault();
                handleSubmit(selectedCampaign);
              }}>
                <div className="space-y-4">
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">
                      Campaign Title *
                    </label>
                    <input
                      type="text"
                      value={selectedCampaign?.title || ''}
                      onChange={(e) => setSelectedCampaign((prev: any) => ({ ...prev, title: e.target.value }))}
                      className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                      required
                    />
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">
                      Description *
                    </label>
                    <textarea
                      value={selectedCampaign?.description || ''}
                      onChange={(e) => setSelectedCampaign((prev: any) => ({ ...prev, description: e.target.value }))}
                      className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                      rows={3}
                      required
                    />
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">
                      Visitor Message *
                    </label>
                    <textarea
                      value={selectedCampaign?.visitor_message || ''}
                      onChange={(e) => setSelectedCampaign((prev: any) => ({ ...prev, visitor_message: e.target.value }))}
                      className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                      rows={4}
                      placeholder="Message that visitors will receive..."
                      required
                    />
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">
                      Offer Details *
                    </label>
                    <input
                      type="text"
                      value={selectedCampaign?.offer_details || ''}
                      onChange={(e) => setSelectedCampaign((prev: any) => ({ ...prev, offer_details: e.target.value }))}
                      className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                      placeholder="e.g., 20% OFF - Free gift with purchase"
                      required
                    />
                  </div>

                  <div className="grid grid-cols-2 gap-4">
                    <div>
                      <label className="block text-sm font-medium text-gray-700 mb-1">
                        Discount Code
                      </label>
                      <input
                        type="text"
                        value={selectedCampaign?.discount_code || ''}
                        onChange={(e) => setSelectedCampaign((prev: any) => ({ ...prev, discount_code: e.target.value }))}
                        className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="e.g., WELCOME2025"
                      />
                    </div>

                    <div>
                      <label className="block text-sm font-medium text-gray-700 mb-1">
                        Valid Until
                      </label>
                      <input
                        type="text"
                        value={selectedCampaign?.valid_until || ''}
                        onChange={(e) => setSelectedCampaign((prev: any) => ({ ...prev, valid_until: e.target.value }))}
                        className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="e.g., Dec 31, 2025"
                      />
                    </div>
                  </div>

                  <div className="flex items-center">
                    <input
                      type="checkbox"
                      id="active"
                      checked={selectedCampaign?.active ?? true}
                      onChange={(e) => setSelectedCampaign((prev: any) => ({ ...prev, active: e.target.checked }))}
                      className="mr-2"
                    />
                    <label htmlFor="active" className="text-sm text-gray-700">
                      Campaign is active
                    </label>
                  </div>

                  <div className="flex justify-end space-x-3 pt-4">
                    <button
                      type="button"
                      onClick={() => setShowForm(false)}
                      className="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-md"
                    >
                      Cancel
                    </button>
                    <button
                      type="submit"
                      className="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md"
                    >
                      {formMode === 'create' ? 'Create Campaign' : 'Update Campaign'}
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default CampaignManagement;
