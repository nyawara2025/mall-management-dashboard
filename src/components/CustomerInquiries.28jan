                        <div className="flex flex-col gap-1">
                          {/* Direct WhatsApp Reply Button */}
                          {inquiry.customer_phone && inquiry.customer_phone.trim() && (
                            <button 
                              onClick={() => handleReplyOnWhatsApp(inquiry)}
                              className="flex items-center gap-2 px-2 py-1 bg-[#25D366] hover:bg-[#20BD5A] text-white text-xs font-medium rounded-md transition-colors"
                              title="Reply directly on WhatsApp"
                            >
                              <MessageCircle className="w-3 h-3" />
