                              <p className="text-gray-400 text-sm italic">Customer message not available in N8N data</p>
                            </div>
                          </div>
                        </div>
                      )}

                      {/* Metadata */}
                      <div className="flex items-center gap-6 text-xs text-gray-500">
                        {inquiry.created_at ? (
                          <span className="flex items-center gap-1">
