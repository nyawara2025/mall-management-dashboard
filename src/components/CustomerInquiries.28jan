              <div>
                <h3 className="font-medium text-error mb-1">Error Loading Inquiries</h3>
                <p className="text-error text-sm">{error}</p>
                <button
                  onClick={handleRefresh}
                  className="mt-3 text-error underline hover:no-underline text-sm"
