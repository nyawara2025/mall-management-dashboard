                              {(!inquiry.product_name || !inquiry.product_name.trim() || inquiry.product_name === 'Product') && (
                                <p className="text-sm text-gray-600 mt-2">
                                  Product: {inquiry.product_name || `Product ID: ${inquiry.product_id?.toString() || 'Unknown'}`}
